<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping package="br.absolut.persistencia.cliente">
	<class name="Cliente" table="cliente">
		<id name="cod">
			<generator class="increment" />
		</id>
		
		<property name="cpfCnpj" column="cpf_cnpj" />
		<property name="identidade" />
		<property name="nome" />
		<property name="endereco"/>
		<property name="bairro"/>
		<property name="cidade"/>
		<property name="estado"/>
		<property name="cep"/>
		<property name="telefone" />
		<property name="celular"/>
		<property name="dtInclusao" column="dt_inclusao" type="java.util.Date"/>
		<property name="dtExclusao" column="dt_exclusao" type="java.util.Date"/>
	</class>
</hibernate-mapping>

